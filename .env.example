# Environment Variables Example
# Copy this to .env and fill in your values

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=sqlite:///./llm_api.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/llm_api

# ============================================================================
# Services
# ============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

ADMIN_HOST=0.0.0.0
ADMIN_PORT=8002

LLM_BACKEND_HOST=localhost
LLM_BACKEND_PORT=8001
LLM_BACKEND_URL=http://localhost:8001

# ============================================================================
# vLLM Backend
# ============================================================================
VLLM_BASE_URL=http://localhost:8100
VLLM_DEFAULT_MODEL=meta-llama/Llama-2-7b-chat-hf

# ============================================================================
# Security
# ============================================================================
ADMIN_SECRET_KEY=change-this-secret-key-in-production
ADMIN_ALGORITHM=HS256
ADMIN_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# Rate Limits
# ============================================================================
RATE_LIMIT_FREE_PER_MINUTE=10
RATE_LIMIT_FREE_PER_HOUR=100

RATE_LIMIT_STANDARD_PER_MINUTE=30
RATE_LIMIT_STANDARD_PER_HOUR=300

RATE_LIMIT_PREMIUM_PER_MINUTE=100
RATE_LIMIT_PREMIUM_PER_HOUR=1000

# ============================================================================
# Email Verification (Self-Service)
# ============================================================================
# Allowed email domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=["company.com","company.co.kr"]

# Verification code expiration (minutes)
VERIFICATION_CODE_EXPIRE_MINUTES=5

# SMTP Settings
USE_MOCK_EMAIL=true  # Set to false in production
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@company.com

# For Gmail:
# USE_MOCK_EMAIL=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["*"]

# ============================================================================
# Logging (optional)
# ============================================================================
LOG_LEVEL=info
